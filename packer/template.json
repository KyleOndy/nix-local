{
  "variables": {
    "HostIP": null
  },
  "builders": [
    {
      "boot_command": [
        "fdisk /dev/sda<enter>",
        "n",
        "<enter><enter><enter><enter><enter>",
        "a<enter>",
        "w<enter>",
        "<wait>",
        "mkfs.ext4 -j -L nixos /dev/sda1<enter><wait5>",
        "mount LABEL=nixos /mnt<enter><wait>",
        "nixos-generate-config --root /mnt<enter><wait>",
        "curl --max-time 10 http://{{ user `HostIP` }}:{{ .HTTPPort }}/configuration.nix > /mnt/etc/nixos/configuration.nix<enter><wait>",
        "curl --max-time 10 http://{{ user `HostIP` }}:{{ .HTTPPort }}/guest-vmware.nix > /mnt/etc/nixos/guest.nix<enter><wait>",
        "nixos-install --no-root-passwd && reboot<enter>"
      ],
      "boot_wait": "1m",
      "cpus": 2,
      "display_name": "[packer] nixos",
      "http_directory": "http",
      "iso_checksum": "0967701e23c613df9a43d912fcbe8588d0af11934ec6697c48405c1d2ba97a85",
      "iso_checksum_type": "sha256",
      "iso_url": "https://releases.nixos.org/nixos/19.03/nixos-19.03.173552.bd5e8f35c2e/nixos-minimal-19.03.173552.bd5e8f35c2e-x86_64-linux.iso",
      "memory": 4096,
      "network": "nat",
      "output_directory": "output",
      "shutdown_command": "shutdown -P now",
      "ssh_username": "root",
      "ssh_private_key_file": "../keys/insecure-local",
      "ssh_wait_timeout": "10m",
      "type": "vmware-iso"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "nixos-19.03-x86_64-{{.Provider}}.box"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "sudo sh '{{.Path}}'",
      "script": "scripts/postinstall.sh"
    }
  ]
}